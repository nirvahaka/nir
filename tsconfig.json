{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "alwaysStrict": true,
        "charset": "UTF-8",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "esnext",
        "newLine": "LF",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "~database/*": [
                "database/*"
            ],
            "~logger/*": [
                "logger/*"
            ],
            "~cmds/*": [
                "cmds/*"
            ],
            "~util/*": [
                "utilities/*"
            ]
        }
    }
}
